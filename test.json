{
  "openapi": "3.0.2",
  "info": {
    "title": "iController ML API",
    "version": "1.0"
  },
  "servers": [
    {
      "url": "http://ai-02.op-01.credico:6060/"
    }
  ],
  "paths": {
    "/platforms": {
      "get": {
        "description": "List of all platforms known by ML system",
        "parameters": [
          {
            "in": "query",
            "name": "filter",
            "required": false,
            "schema": {
              "type": "string",
              "enum":["enabled", "disabled"]
            },
            "description": "Filter platform list based on property"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        },
        "tags":["General"]
      }
    },
    "/{platform}/settings": {
      "get": {
        "description": "",
        "parameters": [
          {
            "in": "path",
            "name": "platform",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The platform name"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        },
        "tags":["Settings"]
      }
    },
    "/{platform}/survivalsettings": {
      "get": {
        "description": "",
        "parameters": [
          {
            "in": "path",
            "name": "platform",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The platform name"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        },
        "tags":["Settings"]
      }
    },
    "/{platform}/procedure": {
      "get": {
        "description": "",
        "parameters": [
          {
            "in": "path",
            "name": "platform",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The platform name"
          },
          {
            "in": "header",
            "name": "procedure",
            "required": true,
            "content":{
              "application/json":{
                "schema":{
                  "type":"object",
                  "properties": {
                    "debtors":{
                      "type":"array",
                      "items":{
                        "type":"integer",
                        "default":3001
                      }
                    },
                    "procedure_steps": {
                      "type": "array",
                      "items":{
                        "type":"object",
                        "properties": {
                          "type":{
                            "type":"string",
                            "enum":["reminder", "call"]
                          },
                          "day":{
                            "type":"integer",
                            "default":0
                          },
                          "medium":{
                            "type":"string",
                            "default":"email"
                          }
                        }
                      }
                    }
                  }

                }

              }
            },

            "description": "The platform name"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        },
        "tags":["General"]
      }
    }
  }
}
